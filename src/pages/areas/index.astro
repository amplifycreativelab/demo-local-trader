---
import BaseLayout from "../../layouts/BaseLayout.astro";
import areas from "../../data/areas.json";

const title = "Service Areas";
const baseUrl = import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : `${import.meta.env.BASE_URL}/`;
---

<BaseLayout title={title}>
    <div class="bg-gray-50 py-16">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                Areas We Serve
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                Example coverage areas for a non-indexed portfolio demo.
            </p>
        </div>
    </div>

    <div class="container mx-auto px-4 py-20">
        <div
            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
        >
            {
                areas.map((area) => (
                    <a
                        href={`${baseUrl}contact?area=${area.name}`}
                        class="block p-6 bg-white border border-gray-200 rounded-xl hover:shadow-md hover:border-primary transition-all group"
                    >
                        <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary mb-2">
                            {area.name}
                        </h3>
                        <p class="text-sm text-gray-500">{area.blurb}</p>
                        <span class="text-sm text-primary font-medium mt-4 block">
                            Request Quote â†’
                        </span>
                    </a>
                ))
            }
        </div>
    </div>
</BaseLayout>
