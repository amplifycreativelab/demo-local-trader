---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroQuote from "../components/HeroQuote.astro";
import TrustBadges from "../components/TrustBadges.astro";
import ServiceCard from "../components/ServiceCard.astro";
import services from "../data/services.json";
import areas from "../data/areas.json";

import { Image } from "astro:assets";
import plumberWorkingImg from "../assets/images/home_plumber_working.webp";

const title = "Plumbing Services | Concept Demo";
const baseUrl = import.meta.env.BASE_URL.endsWith("/")
	? import.meta.env.BASE_URL
	: `${import.meta.env.BASE_URL}/`;
---

<BaseLayout title={title}>
	<HeroQuote
		headline="Fast & Reliable Plumbing"
		subheadline="Licensed • Insured • Arrives on Time. No call-out fee if you accept the quote."
		primaryCta="Get a Free Quote"
		secondaryCta="Request a Quote"
	/>

	<TrustBadges />

	<!-- Services Section -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
					Our Plumbing Services
				</h2>
				<p class="text-xl text-gray-600">
					We handle everything from blocked drains to emergency repairs and
					urgent fixes.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					services.map((service) => (
						<ServiceCard
							title={service.title}
							description={service.description}
							icon={service.icon}
							href="/contact"
						/>
					))
				}
			</div>

			<div class="mt-12 text-center">
				<a
					href={`${baseUrl}services`}
					class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors"
				>
					View All Services
				</a>
			</div>
		</div>
	</section>

	<!-- Why Choose Us -->
	<section class="py-20 bg-gray-50 border-t border-gray-200">
		<div class="container mx-auto px-4">
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<div class="order-2 md:order-1">
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
						Why Clients Trust QuickQuote
					</h2>
					<ul class="space-y-6">
						<li class="flex items-start gap-4">
							<div
								class="w-12 h-12 rounded-full bg-green-100 text-green-600 flex items-center justify-center flex-shrink-0 text-xl shadow-sm"
							>
								dY'ý
							</div>
							<div>
								<h3 class="font-bold text-xl mb-1 text-gray-900">
									Upfront Pricing
								</h3>
								<p class="text-gray-600">
									No hidden surprises. We provide a clear quote before starting
									any work.
								</p>
							</div>
						</li>
						<li class="flex items-start gap-4">
							<div
								class="w-12 h-12 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center flex-shrink-0 text-xl shadow-sm"
							>
								ƒ?ñ‹,?
							</div>
							<div>
								<h3 class="font-bold text-xl mb-1 text-gray-900">
									On-Time Guarantee
								</h3>
								<p class="text-gray-600">
									We respect your time. If we're late, we'll let you know and
									offer a discount.
								</p>
							</div>
						</li>
						<li class="flex items-start gap-4">
							<div
								class="w-12 h-12 rounded-full bg-amber-100 text-amber-600 flex items-center justify-center flex-shrink-0 text-xl shadow-sm"
							>
								ƒ-?
							</div>
							<div>
								<h3 class="font-bold text-xl mb-1 text-gray-900">
									5-Star Service
								</h3>
								<p class="text-gray-600">
									Friendly, respectful, and tidy. We leave your home exactly as
									we found it.
								</p>
							</div>
						</li>
					</ul>
				</div>
				<div class="order-1 md:order-2">
					<Image
						src={plumberWorkingImg}
						alt="Plumber working"
						class="rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300 w-full object-cover h-[400px]"
					/>
				</div>
			</div>
		</div>
	</section>

	<!-- Areas Preview -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-3xl font-bold mb-8 text-gray-900">
				Example Coverage Areas
			</h2>
			<p class="text-xl text-gray-600 max-w-2xl mx-auto mb-12">
				Fictional coverage examples for a non-indexed portfolio demo.
			</p>

			<div class="flex flex-wrap justify-center gap-4 mb-12">
				{
					areas
						.slice(0, 5)
						.map((area) => (
							<span class="bg-gray-50 border border-gray-200 text-gray-800 px-5 py-2 rounded-full font-medium shadow-sm">
								{area.name}
							</span>
						))
				}
				<span class="bg-gray-50 border border-gray-200 text-gray-800 px-5 py-2 rounded-full font-medium shadow-sm">
					and more...
				</span>
			</div>

			<a
				href={`${baseUrl}areas`}
				class="text-primary font-bold hover:text-primary-hover text-lg decoration-2 underline underline-offset-4 hover:decoration-primary"
			>
				Browse coverage examples
			</a>
		</div>
	</section>

	<section class="bg-primary text-white py-24 relative overflow-hidden">
		<div
			class="absolute inset-0 opacity-10"
			style={`background-image: url('${baseUrl}grid-pattern.svg')`}
		>
		</div>
		<div class="container mx-auto px-4 text-center relative z-10">
			<h2 class="text-3xl md:text-5xl font-bold mb-6 tracking-tight">
				Need a Plumber Today?
			</h2>
			<p class="text-xl text-blue-100 mb-10 max-w-2xl mx-auto">
				Don't let a small leak turn into a big problem. Get a fast, free quote
				now (concept demo).
			</p>
			<div class="flex flex-col sm:flex-row gap-5 justify-center">
				<a
					href={`${baseUrl}contact`}
					class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-primary bg-white rounded-xl hover:bg-gray-50 transition-colors shadow-lg transform hover:-translate-y-1 duration-200"
				>
					Get a Quote
				</a>
				<a
					href={`${baseUrl}services`}
					class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white/30 rounded-xl hover:bg-white/10 transition-colors backdrop-blur-sm"
				>
					View Services
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
