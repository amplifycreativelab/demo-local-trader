---
interface Props {
    headline?: string;
    subheadline?: string;
    primaryCta?: string;
    secondaryCta?: string;
}

const {
    headline = "Fast & Reliable Plumbing in Perth",
    subheadline = "Licensed â€¢ Insured â€¢ Arrives on Time",
    primaryCta = "Get a Free Quote",
    secondaryCta = "Call Now 0400 123 456",
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : `${import.meta.env.BASE_URL}/`;
---

<section class="relative bg-white overflow-hidden">
    <div
        class="absolute inset-0 bg-blue-50/50 -skew-y-3 origin-top-left transform scale-110 z-0"
    >
    </div>

    <div class="container mx-auto px-4 py-16 md:py-24 relative z-10">
        <div
            class="max-w-3xl mx-auto text-center md:text-left md:mx-0 md:w-1/2"
        >
            <div
                class="inline-block px-3 py-1 mb-4 text-xs font-bold tracking-wider text-blue-800 uppercase bg-blue-100 rounded-full"
            >
                Available Today in Perth
            </div>
            <h1
                class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6 tracking-tight"
            >
                {headline}
            </h1>
            <p class="text-lg md:text-xl text-gray-600 mb-8 leading-relaxed">
                {subheadline}
            </p>

            <div
                class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start"
            >
                <a
                    href={`${baseUrl}contact`}
                    class="inline-flex items-center justify-center px-8 py-4 text-base font-bold text-white transition-all duration-200 bg-primary rounded-xl hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                >
                    {primaryCta}
                </a>
                <a
                    href="tel:0400123456"
                    class="inline-flex items-center justify-center px-8 py-4 text-base font-bold text-gray-700 transition-all duration-200 bg-white border-2 border-gray-200 rounded-xl hover:bg-gray-50 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-200"
                >
                    ðŸ“ž {secondaryCta}
                </a>
            </div>

            <p
                class="mt-4 text-sm text-gray-500 flex items-center justify-center md:justify-start gap-2"
            >
                <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"
                ></span> 2 technicians are available nearby
            </p>
        </div>
    </div>

    <!-- Right side image (Desktop absolute) -->
    <div
        class="hidden md:block absolute top-0 right-0 w-1/2 h-full bg-gray-200"
    >
        <!-- Placeholder for hero image -->
        <div
            class="w-full h-full bg-cover bg-center bg-[url('https://images.unsplash.com/photo-1581092921461-eab62e97a783?q=80&w=2670&auto=format&fit=crop')] mix-blend-multiply opacity-90"
        >
        </div>
    </div>
</section>
